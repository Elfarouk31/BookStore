@model BookStore.Models.BookViewModel

<form method="post" asp-action="Create">
	<div class="row">
		<div class="col-2">
			<label class="form-label">Id</label>
		</div>
		<div class="col-3">
			<input class="form-control col-3" asp-for="Id" disabled/>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label class="form-label">Title</label>
		</div>
		<div class="col-3">
			<input class="form-control col-3" asp-for="Title"/>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label class="form-label">Description</label>
		</div>
		<div class="col-3">
			<input class="form-control col-3" asp-for="Description"/>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label class="form-label">Author</label>
		</div>
		<div class="col-3">
			<input class="form-control col-3" asp-for="Author.FullName" />
		</div>
	</div>
	<div class="row">
		<button class="btn btn-primary" type="submit">Save</button>
	</div>
</form>